<div class="nav-bar">
    <div class="left-nav-items">
        <%= link_to "Home", root_path %>
        <%= link_to "About" %>
    </div>
    <div class="title-navbar">
      <h1>RoamReady</h1>
    </div>
    <div class="right-nav-items">
        <%= link_to "Your Trips", trips_path %>
        <% if user_signed_in? %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to "Login", login_path %>
        <% end %>
    </div>
  </div>

<div class="response-container">

  <div class="response">
    <% if @trip.openai_response.present? %>
      <%= checklist_with_checkboxes(@formatted_content) %>
    <% end %>
    <% if @trip.place_photo_reference.present? %>
      <img src="https://maps.googleapis.com/maps/api/place/photo?maxwidth=400&photoreference=<%= @trip.place_photo_reference %>&key=<%= ENV['GOOGLE_API_KEY'] %>" alt="Trip Location Photo">
    <% end %>
  </div>
</div>
